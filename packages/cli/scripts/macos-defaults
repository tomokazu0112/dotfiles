#!/bin/sh

set -e

echo ğŸ“Œ Configuring macOS default settings

# Close any open System Preferences panes, to prevent them from overriding
# settings weâ€™re about to change
osascript -e 'tell application "System Preferences" to quit'

###########################################################
# General Settings
###########################################################
# ã‚¯ãƒ©ãƒƒã‚·ãƒ¥æ™‚ã®è­¦å‘Šè¡¨ç¤ºã‚’éè¡¨ç¤º
defaults write com.apple.CrashReporter DialogType -string "none"

###########################################################
# Keyboard
###########################################################
# ã‚­ãƒ¼ãƒªãƒ”ãƒ¼ãƒˆ
defaults write NSGlobalDomain KeyRepeat -int 2
defaults write NSGlobalDomain InitialKeyRepeat -int 15

###########################################################
# Trackpad
###########################################################
# ã‚«ãƒ¼ã‚½ãƒ«ã®ç§»å‹•é€Ÿåº¦
defaults write -g com.apple.trackpad.scaling -int 3
# ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«é€Ÿåº¦
defaults write -g com.apple.trackpad.scrolling -int 1
# ã‚·ãƒ³ã‚°ãƒ«ã‚¿ãƒƒãƒ—ã‚¯ãƒªãƒƒã‚¯
defaults write com.apple.AppleMultitouchTrackpad Clicking -bool true
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad Clicking -bool true
defaults -currentHost write -g com.apple.mouse.tapBehavior -bool true
# ä¸‰æœ¬æŒ‡ã§ãƒ‰ãƒ©ãƒƒã‚°
defaults write com.apple.driver.AppleBluetoothMultitouch.trackpad TrackpadThreeFingerDrag -bool true
defaults write com.apple.AppleMultitouchTrackpad TrackpadThreeFingerDrag -bool true

###########################################################
# Mouse
###########################################################
# ã‚«ãƒ¼ã‚½ãƒ«ã®ç§»å‹•é€Ÿåº¦
defaults write -g com.apple.mouse.scaling -int 10

###########################################################
# Dock
###########################################################
# è‡ªå‹•éè¡¨ç¤º
defaults write com.apple.dock autohide -bool true
# ã‚¨ãƒ•ã‚§ã‚¯ãƒˆã‚’ã‚¹ã‚±ãƒ¼ãƒ«ã¸
defaults write com.apple.dock mineffect -string scale
# ä½ç½®ã‚’å·¦ã¸
defaults write com.apple.dock orientation -string left
# ã‚µã‚¤ã‚ºã‚’å°ã•ã
defaults write com.apple.dock tilesize -int 35

###########################################################
# Menu Bar
###########################################################
# ãƒ‘ã‚¹ãƒãƒ¼ã®è¡¨ç¤º
defaults write com.apple.finder ShowPathbar -bool true

###########################################################
# Finder
###########################################################
# æ‹¡å¼µå­ã®è¡¨ç¤º
defaults write -g AppleShowAllExtensions -bool true

###########################################################
# Screenshot
###########################################################
# æ’®å½±å¾Œã®ã‚µãƒ ãƒã‚¤ãƒ«éè¡¨ç¤º
defaults write com.apple.screencapture show-thumbnail -bool false
# ä¿å­˜ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®å¤‰æ›´
defaults write com.apple.screencapture location -string "${HOME}/screenshots"
